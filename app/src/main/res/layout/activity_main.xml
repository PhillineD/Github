<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="368dp"
        android:layout_height="234dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Body"
            android:visibility="visible"
            app:srcCompat="@drawable/body" />

        <ImageView
            android:id="@+id/imageViewArms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Arms"
            android:visibility="invisible"
            app:srcCompat="@drawable/arms" />

        <ImageView
            android:id="@+id/imageViewEars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Ears"
            android:visibility="invisible"
            app:srcCompat="@drawable/ears" />

        <ImageView
            android:id="@+id/imageViewEyebrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Eyebrows"
            android:visibility="invisible"
            app:srcCompat="@drawable/eyebrows" />

        <ImageView
            android:id="@+id/imageViewEyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Eyes"
            android:visibility="invisible"
            app:srcCompat="@drawable/eyes" />

        <ImageView
            android:id="@+id/imageViewGlasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Glasses"
            android:visibility="invisible"
            app:srcCompat="@drawable/glasses" />

        <ImageView
            android:id="@+id/imageViewHed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Hed"
            android:visibility="invisible"
            app:srcCompat="@drawable/hat" />

        <ImageView
            android:id="@+id/imageViewMouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Mouth"
            android:visibility="invisible"
            app:srcCompat="@drawable/mouth" />

        <ImageView
            android:id="@+id/imageViewMustage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Mustage"
            android:visibility="invisible"
            app:srcCompat="@drawable/mustache" />

        <ImageView
            android:id="@+id/imageViewNose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Nose"
            android:visibility="invisible"
            app:srcCompat="@drawable/nose" />

        <ImageView
            android:id="@+id/imageViewshoes"
            android:layout_width="wrap_content"
            android:layout_height="233dp"
            android:contentDescription="Shoes"
            android:visibility="invisible"
            app:srcCompat="@drawable/shoes" />

    </FrameLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="263dp"
        android:layout_height="158dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="28dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <CheckBox
            android:id="@+id/checkBoxMouth"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="Mouth"
            android:visibility="visible"
            app:layout_column="1"
            app:layout_row="0"
            tools:text="Mouth" />

        <CheckBox
            android:id="@+id/checkBoxShoes"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="Shoes"
            android:visibility="visible"
            app:layout_column="1"
            app:layout_row="1"
            tools:text="Shoes" />

        <CheckBox
            android:id="@+id/checkBoxMustage"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="Mustage"
            android:visibility="visible"
            app:layout_column="1"
            app:layout_row="2"
            tools:text="Mustage" />

        <CheckBox
            android:id="@+id/checkBoxHed"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="Hed"
            android:visibility="visible"
            app:layout_column="1"
            app:layout_row="3"
            tools:text="Hed" />

        <CheckBox
            android:id="@+id/checkBoxEars"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="Ears"
            android:visibility="visible"
            app:layout_column="1"
            app:layout_row="4"
            tools:text="Ears" />

        <CheckBox
            android:id="@+id/checkBoxGlasses"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="Glasses"
            android:visibility="visible"
            app:layout_column="0"
            app:layout_row="1"
            tools:text="Glasses" />

        <CheckBox
            android:id="@+id/checkBoxArms"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="Arms"
            android:visibility="visible"
            app:layout_column="0"
            app:layout_row="2"
            tools:text="Arms" />

        <CheckBox
            android:id="@+id/checkBoxEyebrows"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="Eyebrows"
            android:visibility="visible"
            app:layout_column="0"
            app:layout_row="3"
            tools:text="Eyebrows" />

        <CheckBox
            android:id="@+id/checkBoxEyes"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="Eyes"
            android:visibility="visible"
            app:layout_column="0"
            app:layout_row="4"
            tools:text="Eyes" />

        <CheckBox
            android:id="@+id/checkBoxNose"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="Nose"
            android:visibility="visible"
            app:layout_column="0"
            app:layout_row="0"
            tools:text="Nose" />
    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>